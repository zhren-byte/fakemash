<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {{titulo}}
    </title>
    <link href="/styles/output.css" rel="stylesheet" />
    <script
      src="https://code.jquery.com/jquery-3.7.0.min.js"
      integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
      crossorigin="anonymous"
    ></script>
  </head>

  <body class="flex h-full flex-col">
    <nav class="w-full bg-red-500 px-8 py-3">
      <span class="text-2xl text-white">
        {{titulo}}
      </span>
    </nav>
    <div class="w-full flex flex-col justify-around items-center h-full md:flex-row">
      <img
        onclick="voteImg(this)"
        class="images w-96 h-96 md:h-fit md:w-fit"
        src="{{memeGif1}}"
        alt="{{meme1}}"
      />
      <img
        onclick="voteImg(this)"
        class="images w-96 h-96"
        src="{{memeGif2}}"
        alt="{{meme2}}"
      />
    </div>
    <script src="/js/vote.js"></script>
  </body>
</html>