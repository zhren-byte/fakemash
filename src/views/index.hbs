<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ titulo }}</title>
    <link href="/styles/output.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"
        integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
</head>

<body class="flex h-full flex-col">
    <nav class="w-full bg-red-500 px-8 py-3">
        <span class="text-2xl text-white">{{ titulo }}</span>
    </nav>
    <div class="w-full flex flex-row justify-around items-center h-full">
        <img onclick="voteImg(this)" class="images" width="500" height="500" src="{{ girlImg1 }}"
            alt="{{ girl1 }}" />
        <img onclick="voteImg(this)" class="images" width="500" height="500" src="{{ girlImg2 }}"
            alt="{{ girl2 }}" />
    </div>
    <script>
        function voteImg(e){
            $.ajax({
                type: "POST",
                url: '/vote',
                data: {
                    winner: $(e).attr("alt"),
                    loser: $(".images").not(e).attr("alt")
                },
                success: function(res) {
                    $(".images").not(e)[0].outerHTML = `<img onclick="voteImg(this)" class="images" width="500" height="500" src="${"https://this-person-does-not-exist.com/"+res.url}" alt="${res.name}" />`
                }
            });
        };
    </script>
</body>

</html>
